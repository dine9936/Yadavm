<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Profile"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/toolbar_main"/>
<include
    layout="@layout/layout_profile"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_margin="30dp"
                        android:src="@drawable/ic_contact"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />
                    <TextView
                        android:id="@+id/address_profile"
                        android:textColor="@android:color/black"
                        android:layout_gravity="start"
                        android:gravity="start|center"
                        android:textAlignment="textStart"
                        android:padding="20dp"
                        android:textSize="15dp"
                        android:text="S - 17/286 Nadesar, Varanasi 221002"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/edit_address"
                            android:layout_gravity="right"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_edit"/>
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:src="@drawable/ic_mode_comment"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="30dp"/>
                    <EditText
                        android:inputType="textCapWords"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:id="@+id/edit_suggestion"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/black"
                        android:hint="Suggestion..."
                        android:layout_width="100dp"
                        android:background="@drawable/edit_text_box"
                        android:layout_height="50dp"
                        android:layout_weight="1"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/send_suggestion"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_send" />
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/support"
                    android:layout_marginTop="20dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                            android:background="@android:color/transparent"
                            android:layout_gravity="right|center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_headset"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:textAlignment="center"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Support"
                            android:textColor="#D24C0F"/>
                        <TextView
                            android:id="@+id/mobile"
                            android:layout_gravity="center|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+919452251055"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:text="Log out"
                    android:id="@+id/logout"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>